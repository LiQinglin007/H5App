<?xml version="1.0" encoding="utf-8"?>
<h5app.comxiaomi.h5app.utils.recycler.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_140"
    android:layout_marginTop="@dimen/px_10"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_urllist_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_10"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:paddingTop="@dimen/px_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_urllist_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标题标题标题标题标题"
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/item_urllist_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_urllist_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:text="http://www.baidu.com"
            android:textColor="@color/color_666"
            android:textSize="@dimen/px_28" />
    </LinearLayout>


    <Button
        android:id="@+id/item_urllist_edit"
        android:layout_width="@dimen/px_110"
        android:layout_height="match_parent"
        android:background="@color/default_color"
        android:clickable="true"
        android:text="编辑"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/item_urllist_dele"
        android:layout_width="@dimen/px_110"
        android:layout_height="match_parent"
        android:background="@color/color_F00"
        android:text="删除"
        android:textColor="@android:color/white" />


</h5app.comxiaomi.h5app.utils.recycler.SwipeMenuView>
