<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_color"
        app:title="编辑"
        app:titleTextColor="@color/color_white">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:paddingLeft="@dimen/px_30"
        android:text="书签名称"
        android:textSize="@dimen/px_32" />

    <EditText
        android:id="@+id/edit_web_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:background="@drawable/back_white"
        android:hint="请输入书签名称"
        android:paddingBottom="@dimen/px_10"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:paddingTop="@dimen/px_10"
        android:textSize="@dimen/px_32" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:paddingLeft="@dimen/px_30"
        android:text="书签地址"
        android:textSize="@dimen/px_32" />

    <EditText
        android:id="@+id/edit_web_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:background="@drawable/back_white"
        android:hint="请输入书签地址"
        android:paddingBottom="@dimen/px_10"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:paddingTop="@dimen/px_10"
        android:textSize="@dimen/px_32" />


    <CheckBox
        android:id="@+id/edit_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_20"
        android:text="设置为默认地址"
        android:textColor="@color/color_333"
        android:textSize="@dimen/px_28" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"></View>


    <TextView
        android:id="@+id/edit_web_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@drawable/back_default"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/color_white"
        android:textSize="@dimen/px_34" />


</LinearLayout>